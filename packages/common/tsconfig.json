{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "declaration": true,      
    "outDir": "./dist",       
    "strict": true,
    "experimentalDecorators": true, 
    "useDefineForClassFields": false,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}