{
  "name": "deckards",
  "module": "index.ts",
  "devDependencies": {
    "cloudflared": "^0.7.1",
    "prettier": "^3.7.4"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "private": true,
  "scripts": {
    "dev": "bun --filter '*' dev",
    "cloudflared": "cloudflared tunnel --url http://localhost:5173",
    "fmt": "prettier --write .",
    "check": "prettier --check .",
    "jwt:gen": "node -e \"console.log(require('crypto').randomBytes(32).toString('hex'))\"",
    "watch:common": "bun run --filter '@deckards/common' watch",
    "build:common": "bun run --filter '@deckards/common' build"
  },
  "type": "module",
  "workspaces": [
    "packages/*"
  ]
}
